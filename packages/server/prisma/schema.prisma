// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Podcast {
  id              Int       @id @default(autoincrement())
  title           String
  feedURL         String
  lastFetchDate   DateTime?
  episodes        Episode[]
}

model Episode {
  id            Int       @id @default(autoincrement())
  podcastId     Int
  podcast       Podcast   @relation(fields: [podcastId], references: [id])
  guid          String
  title         String
  contentURL    String
  publishDate   DateTime
  downloads     EpisodeDownload[]

  @@unique([podcastId, guid])
}

model EpisodeDownload {
  id            Int       @id @default(autoincrement())
  episodeId     Int
  episode       Episode   @relation(fields: [episodeId], references: [id])
  contentURL    String
  downloadDate  DateTime
  finished      Boolean   @default(false)
  parts         EpisodePart[]

  calls         Call[]
}

model EpisodePart {
  id          Int               @id @default(autoincrement())
  downloadId  Int
  download    EpisodeDownload   @relation(fields: [downloadId], references: [id])
  sortOrder   Int
  key         String
  url         String
  size        Int

  calls       Call[]
}

model Call {
  id                    Int               @id @default(autoincrement())
  twilioCallSid         String            @unique
  state                 CallState
  waitingMessageCount   Int               @default(0)
  downloadId            Int?
  download              EpisodeDownload?  @relation(fields: [downloadId], references: [id])
  currentPartId         Int?
  currentPart           EpisodePart?      @relation(fields: [currentPartId], references: [id])

  phoneNumber           String
  callerName            String?
  callerCity            String?
  callerState           String?
  callerZip             String?
  callerCountry         String?
  callDuration          Int?
}

enum CallState {
  FETCHING_EPISODE
  NO_EPISODE
  EPISODE_ERROR
  INTRODUCING_EPISODE
  PLAYING_EPISODE
  ENDING_EPISODE
  ENDED
}
