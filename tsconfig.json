{
  "compilerOptions": {
    "target": "es2016",
    "module": "ESNext",
    "lib": ["es2021"],

    "moduleResolution": "nodenext",
    "esModuleInterop": true,

    "baseUrl": "./",
    "paths": {
      "@deephone/*": ["packages/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "**/node_modules/*", "dist"]
}
